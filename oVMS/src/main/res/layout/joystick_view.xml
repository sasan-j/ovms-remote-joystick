<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:weightSum="4"
    android:baselineAligned="false"
    >

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.7"
        android:layout_gravity="center">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
        >

            <ImageButton
                android:id="@+id/btn_forward"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                />

            <ImageButton
                android:id="@+id/btn_reverse"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/btn_forward"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>
    </FrameLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2.5"
        android:layout_gravity="center_horizontal|bottom"
        android:baselineAligned="false"
        android:id="@+id/LinearLayout_central">


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_gravity="center">

                <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/picker_speed"
                    android:layout_gravity="center_horizontal"/>

                <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/picker_duration"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            >

            <ImageButton
                android:id="@+id/btn_speed_limit"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                />

            <ImageButton
                android:id="@+id/btn_spooky"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/btn_speed_limit"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="0.5">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/listView"
                android:layout_gravity="top"
                android:layout_weight="4" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/spinner"
                android:spinnerMode="dropdown"
                android:layout_gravity="bottom"
                android:layout_weight="1" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageButton
                android:id="@+id/btn_reset"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                />

            <ImageButton
                android:id="@+id/btn_no_throttle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/btn_reset"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image_connection"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/connection_unknown"
            />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/image_connection"
            android:text="New ToggleButton"
            android:layout_gravity="center_horizontal|top" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageButtonStop"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:layout_below="@+id/toggleButton"
            android:clickable="true"
            android:src="@drawable/ic_stop"
            android:background="#00ffffff"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/image_brake"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:src="@drawable/brake"
            />

    </RelativeLayout>

</LinearLayout>